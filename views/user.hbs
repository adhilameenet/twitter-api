<div class="container mt-5">
    <img  src="{{user.profileImageURL}}" alt="profile_image">
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>User ID</td>
                <td>{{user.id}}</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Name</td>
                <td>{{user.name}}</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Username</td>
                <td>{{user.username}}</td>
            </tr>
            <tr>
                <th scope="row">4</th>
                <td>Created At</td>
                <td>{{user.createdAt}}</td>
            </tr>
            <tr>
                <th scope="row">5</th>
                <td>Description</td>
                <td>{{user.description}}</td>
            </tr>
            <tr>
                <th scope="row">6</th>
                <td>Followers Count</td>
                <td>{{user.publicMetrics.followersCount}}</td>
            </tr>
            <tr>
                <th scope="row">7</th>
                <td>Following Count </td>
                <td>{{user.publicMetrics.followingCount}}</td>
            </tr>
            <tr>
                <th scope="row">8</th>
                <td>Tweet Count</td>
                <td>{{user.publicMetrics.tweetCount}}</td>
            </tr>
        </tbody>
    </table>
</div>